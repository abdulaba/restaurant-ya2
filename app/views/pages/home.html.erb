<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.freepik.com/foto-gratis/camarero-feliz-sirviendo-comida-grupo-amigos-alegres-pub_637285-12525.jpg?w=996&t=st=1677954662~exp=1677955262~hmac=43be6fb3fff6b697ea9be957d6e678e196c4c02e5b095480b815baa9e0c1c81d);">
  <div class="container">
    <h1>Encuentra  <strong>los mejores</strong> restaurantes  <strong>de tu ciudad</strong>!</h1>
    <p>Registra ru restaurante GRATIS</p>
    <a class="btn btn-flat" href="#">Registrar</a>
  </div>
</div>

<div class="container">
  <!-- Aqui comienzan las card de restauarnts-->
  <div class="row mt-5 mb-5">
    <% @restaurants.first(3).each do |restaurant| %>
      <div class="col-4">
        <section class="articles">
          <article>
            <div class="article-wrapper">
              <figure>
                <%# <img src="https://picsum.photos/id/1011/800/450" alt="" /> %>
                <%= image_tag restaurant.photo %>
              </figure>
              <div class="article-body">
                <h2><%= restaurant.name.truncate(15) %></h2>
                <p>
                  <%= restaurant.description.truncate(20) %>
                </p>
                <a href="/restaurants/<%=restaurant.id%>" class="read-more">
                  Read more <span class="sr-only">about this is some title</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </section>
      </div>
    <% end %>
  </div>
  <!-- Aqui terminan las card de restauarnts-->

  <!-- Aqui comienzan las card de foods-->
    <div class="row">
      <div id="header">
        <h1>Restaurante YA!</h1>
        <p>Los mejores restaurantes del mundo</p>
      </div>
    <% @foods.first(3).each do |food| %>
      <div class="col-4">
        <div class="card">
          <div class="card-image">
            <%= image_tag food.photo %>
            <%# <img src="https://images.unsplash.com/photo-1604135307399-86c6ce0aba8e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1374&q=80"> %>
          </div>
          <div class="card-text">
            <p class="card-meal-type"><%= food.name %></p>
            <h2 class="card-title"><%= food.restaurant.name %></h2>
            <p class="card-body"><%= food.description %></p>
          </div>
          <div class="card-price"><%= number_to_currency(food.price, precision: 0, unit: "CLP $ ", delimiter: ".") %></div>
        </div>
      </div>
      <% end %>
    </div>
  <!-- Aqui terminan las card de foods-->

</div> <!-- Aqui termina el container-->


