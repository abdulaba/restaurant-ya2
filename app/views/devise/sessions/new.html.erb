<div class="container w-50 border bg-white mt-5 shadow p-4">
  <h2>Ingresar</h2>
  <div class="row">
    <!-- Formulario de devise -->
    <div class="col-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Ingresar", class: "btn btn-success w-100" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

    <!-- Imagen -->
    <div class="col-6">
      <%= image_tag "camarera", :size =>"320x300" %>
    </div>
  </div>  
</div>